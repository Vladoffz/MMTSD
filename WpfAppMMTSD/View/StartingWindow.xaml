<Window x:Class="WpfAppMMTSD.View.StartingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppMMTSD.View"
        mc:Ignorable="d"
        Title="StartingWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Background="#99ffbb">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="20"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="1" Text="© Andrey Rodik IT-83 2020" 
                       TextAlignment="Right" Padding="0 0 20 0" Background="DarkGray"/>
            <Button Grid.Row="0" Width="300" Height="100" Margin="0 0 0 100" Content="Start Testing" 
                    FontSize="25" Click="ButtonBase_OnClick" Background="#00e64d"/>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 30 0 0"  FontSize="16" Text="You've got 3 minutes to do"/>
            <TextBlock Grid.Row="0" Text="for administrator" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10"
                       Foreground="DarkBlue" Cursor="Hand" MouseDown="UIElement_OnMouseDown"/>
        </Grid>
    </Grid>
</Window>
